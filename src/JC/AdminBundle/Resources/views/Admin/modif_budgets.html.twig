{% form_theme form 'JCAdminBundle:Form:fields.html.twig' %}



<div class='row'>
	{{ form_errors(form) }}
</div>


<div class='row' id='form_services'>

	{{ form_start(form) }}
 
				
		<div class='table-responsive'>

			<div class="panel panel-primary filterable">
			    <div class="panel-heading">
				        				       
				      	<h3 class="panel-title">Budgets {{annee}}</h3>

				
			        <div class="pull-right">
			            {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-success save btn-xs glyphicon glyphicon-floppy-disk' } }) }}                    
			        </div>
			    </div>
		
		
				
				<table class="table table-hover table_center">
			  
				    <thead>

						<tr>				
							<th> Service </th>
							<th> Budget </th>
						</tr>			
									
				    </thead>

					
					<tbody id='body_service'>
					
						{# On parcours les services 'non anciens' #}
						{% for budget in form.listeBudgets %}
											  
							  	<tr>
							  	
									<td> {{budget.vars.value.service.nom}} </td>
									<td> {{form_widget(budget.montant)}} </td>
											
								</tr>
								
								
							
						{% endfor %}
											
					
					</tbody>
				  
				</table>
			</div>
			
		</div>	
			
		{{ form_end(form) }}

</div>


<nav>
	<ul class="pager">
    	<li class="previous"><a href="{{  path('jc_admin_homepage', {'annee': (annee-1) }) }}"><span aria-hidden="true">&larr;</span> {{annee-1}}</a></li>
		<li class="next"><a href="{{  path('jc_admin_homepage', {'annee': (annee+1) }) }}">{{annee+1}} <span aria-hidden="true">&rarr;</span></a></li>
    </ul>
</nav>








