{% form_theme form 'JCAdminBundle:Form:fields.html.twig' %}



<div class='row'>
	{{ form_errors(form) }}
</div>


<div class='row' id='form_collectivite'>

	{{ form_start(form) }}
 
				
		<div class='table-responsive'>

			<div class="panel panel-primary filterable">
			    <div class="panel-heading">
				        				       
				      	<h3 class="panel-title">Collectivités</h3>

				
			        <div class="pull-right">
			            {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-success save btn-xs glyphicon glyphicon-floppy-disk' } }) }}                    
			        </div>
			    </div>
		
		
				
				<table class="table table-hover table_center">
			  
				    <thead>

						<tr>				
							<th> Collectivite </th>
							<th> Date de début de mutusalisation </th>
							<th> Date de fin de mutusalisation </th>
						</tr>			
									
				    </thead>

					
					<tbody id='body_collectivite' data-prototype="{{ form_widget(form.listeCollectivites.vars.prototype)|e }}">
					
						{# On parcours les collectivite #}
						{% for coll in form.listeCollectivites %}
				
						  	<tr>
						  	
								<td> {{form_widget(coll.nom)}} </td>
								<td> {{form_widget(coll.dateDebutMutualisation, {'attr' : {'class':'datepicker'}} )}} </td>
								<td> {{form_widget(coll.dateFinMutualisation, {'attr' : {'class':'datepicker'}} )}} </td>
				
										
							</tr>
			
							
						{% endfor %}
				
						<tr id='last_tr_collectivites'>
			      
			      			<td colspan='3'> <a class='btn btn-xs btn-success btn_ajouter' id='ajouter_collectivite' > Ajouter une collectivite </a> </td>
			      	
				  		</tr>  
				  
				  </tbody>
				  
				</table>
			</div>
			
		</div>	
	
		{{ form_end(form) }}
</div>


