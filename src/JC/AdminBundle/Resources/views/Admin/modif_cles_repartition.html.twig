{% form_theme form 'JCAdminBundle:Form:fields.html.twig' %}


<div class='row'>
	{{ form_errors(form) }}
</div>


<div class='row' id='form_collectivite'>

	{{ form_start(form) }}
 
				
		<div class='table-responsive'>

			<div class="panel panel-primary filterable">
			    <div class="panel-heading">
				        				       
				      	<h3 class="panel-title">Clés de répartitions</h3>

				
			        <div class="pull-right">
			            {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-success save btn-xs glyphicon glyphicon-floppy-disk' } }) }}                    
			        </div>
			    </div>
		
		
				
				<table class="table table-hover table_center">
			  
				    <thead>

						<tr>
											
							<th> Clé </th>

										
				
						</tr>
					
				    </thead>

					
					<tbody id='body_cle_repartition' data-prototype="{{ form_widget(form.listeClesRepartition.vars.prototype)|e }}">
					
						{# On parcours les cle de repartition #}
						{% for cle in form.listeClesRepartition %}
				
						  	<tr>
						  	
								<td> {{form_widget(cle.nom, {'attr': {'class':'col-md-8 col-md-offset-2'}} )}} </td>				
										
							</tr>
			
							
						{% endfor %}
				
						<tr id='last_tr_cle_repartition'>
			      
			      			<td colspan='3'> <a class='btn btn-xs btn-success btn_ajouter' id='ajouter_cle_repartition' > Ajouter une Clé </a> </td>
			      	
				  		</tr>  
				  
				  </tbody>
				  
				</table>
			</div>
			
		</div>	
	
		{{ form_end(form) }}
</div>