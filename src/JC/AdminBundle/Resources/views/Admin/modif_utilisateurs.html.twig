{% form_theme form 'JCAdminBundle:Form:fields.html.twig' %}



<div class='row'>
	{{ form_errors(form) }}
</div>


<div class='row' id='form_collectivite'>

	{{ form_start(form) }}
 
				
		<div class='table-responsive'>

			<div class="panel panel-primary filterable">
			    <div class="panel-heading">
				        				       
				      	<h3 class="panel-title">Utilisateurs</h3>

				
			        <div class="pull-right">
			            {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-success save btn-xs glyphicon glyphicon-floppy-disk' } }) }}                    
			        </div>
			    </div>
		
		
				
				<table class="table table-hover table_center">
			  
				    <thead>
						<tr>	
							<th class="col-md-1"> </th>		
							<th class="col-md-4"> Nom </th>
							<th class="col-md-4"> Pr√©nom </th>
							<th class="col-md-3"> Service </th>
						</tr>								
				    </thead>

					
					<tbody id='body_utilisateur' data-prototype="{{ form_widget(form.listeUtilisateurs.vars.prototype)|e }}">
					
						{# On parcours les utilisateurs #}
						{% for user in form.listeUtilisateurs %}
				
						  	<tr>
						  	
						  		<td> <a class='supprimer_utilisateur'><span class="glyphicon glyphicon-remove-circle"></span></a> </td>
								<td> {{form_widget(user.nom)}} </td>
								<td> {{form_widget(user.prenom)}} </td>
								<td> {{form_widget(user.service, {'attr': {'id': 'select_service_utilisateur' } })}} </td>
				
										
							</tr>
			
							
						{% endfor %}
				
						<tr id='last_tr_utilisateur'>
			      
			      			<td colspan='4'> <a class='btn btn-xs btn-success btn_ajouter' id='ajouter_utilisateur' > Ajouter un utilisateur </a> </td>
			      	
				  		</tr>  
				  
				  </tbody>
				  
				</table>
			</div>
			
		</div>	
	
		{{ form_end(form) }}
</div>


